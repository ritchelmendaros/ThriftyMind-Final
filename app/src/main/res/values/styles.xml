<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize the dialog background color -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- Customize the title and message text color -->
        <item name="android:textColorPrimary">@color/border</item>
        <item name="android:text">@color/border</item>
        <item name="android:fontFamily">@font/archivo</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>
