<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_bold"
        android:text="Marketplace"
        android:textColor="@color/icon_color_nav"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="98dp"
        android:layout_height="19dp"
        android:text="Recommended"
        android:textColor="@color/icon_color_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="209dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:cardCornerRadius="20dp"
            android:padding="16dp"
            app:cardBackgroundColor="#236061">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Product 1 Image -->

                <!-- Product 1 Title -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_11" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_bold"
                    android:gravity="center"
                    android:text="Nike Air Jordan"
                    android:textColor="@color/icon_color_nav"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Product 1 Description -->

                <!-- Product 1 Price -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:text="N. Bacalso Ave."
                    android:textColor="@color/border"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="209dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:cardCornerRadius="20dp"
            android:padding="16dp"
            app:cardBackgroundColor="#236061">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Product 2 Image -->
                <!-- Product 2 Title -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nintendo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_bold"
                    android:gravity="center"
                    android:text="Nintendo Switch"
                    android:textColor="@color/icon_color_nav"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Product 2 Description -->

                <!-- Product 2 Price -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo"
                    android:gravity="center"
                    android:text="M. Velez St."
                    android:textColor="@color/border"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
