<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AddExpenses">


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="395dp"
        android:layout_height="95dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/header"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="415dp"
        android:layout_height="212dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="223dp"
            android:layout_height="22dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="535dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Planned Expenses Budget"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="255dp"
            android:layout_height="79dp"
            android:layout_marginStart="-435dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="500dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:lineHeight="51dp"
            android:text="â‚± 5,000.00"
            android:textColor="#CBE4DE"
            android:textSize="51sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="398dp"
        android:layout_height="560dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:circularflow_defaultRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textview15"
            android:layout_width="253dp"
            android:layout_height="20dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Expenses Information"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview13"
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Input Expenses"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtNameofExpenses"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:background="@drawable/textbackground"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Input Name of Expenses"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:textSize="15dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#CBE4DE" />

        <TextView
            android:id="@+id/textview14"
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Input Alloted Budget"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtAllotedBudget"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:background="@drawable/textbackground"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Input Your Budget"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#CBE4DE" />

        <Button
            android:id="@+id/btnAddExpenses"
            android:layout_width="167dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbackground"
            android:text="Add Expenses"
            android:textSize="13dp"
            app:backgroundTint="@color/border"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="295dp" />

        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>