<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->

            <Button
                android:id="@+id/btnGoal"
                android:layout_width="119dp"
                android:layout_height="34dp"
                android:layout_marginStart="-210dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="662dp"
                android:background="@drawable/textbackground"
                android:text="Goal"
                android:textSize="12dp"
                app:backgroundTint="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginStart="-45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="660dp"
                android:foreground="@drawable/bellicon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.986"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="wrap_content"
        android:layout_height="201dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="223dp"
            android:layout_height="22dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="535dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:inputType="numberDecimal"
            android:letterSpacing="-0.01"
            android:text="Planned Expenses Budget"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtbudget"
            android:layout_width="255dp"
            android:layout_height="79dp"
            android:layout_marginStart="-445dp"
