<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AddSavings">


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="395dp"
        android:layout_height="95dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="97dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="55dp"
                android:layout_height="64dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/user" />

            <EditText
                android:id="@+id/txtUser"
                android:layout_width="117dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="211dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/archivo"
                android:fontStyle="normal"
                android:letterSpacing="-0.01"
                android:text="Hello, John!"
                android:textColor="#CBE4DE"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="89dp"
                android:layout_height="15dp"
                android:layout_marginStart="-329dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="662dp"
                android:fontFamily="@font/archivo"
                android:gravity="top"
                android:letterSpacing="0.01"
                android:lineHeight="8dp"
                android:text="Savings"
                android:textColor="#CBE4DE"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnGoal"
                android:layout_width="119dp"
                android:layout_height="34dp"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="662dp"
                android:background="@drawable/textbackground"
                android:text="Goals"
                android:textSize="12dp"
                app:backgroundTint="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnExpense"
                android:layout_width="119dp"
                android:layout_height="34dp"
                android:layout_marginStart="-168dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="662dp"
                android:background="@drawable/textbackground"
                android:text="Expenses"
                android:textSize="12dp"
                app:backgroundTint="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginStart="-45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="660dp"
                android:foreground="@drawable/bellicon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.986"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="415dp"
        android:layout_height="212dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="223dp"
            android:layout_height="22dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="535dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Savings"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/txtsavings"
            android:layout_width="255dp"
            android:layout_height="79dp"
            android:layout_marginStart="-435dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="500dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:textAlignment = "center"
            android:letterSpacing="-0.01"
            android:lineHeight="51dp"
            android:text=""
            android:textColor="#CBE4DE"
            android:textSize="51sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="398dp"
        android:layout_height="560dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:circularflow_defaultRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textview15"
            android:layout_width="253dp"
            android:layout_height="20dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Savings Information"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview13"
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Input Savings"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtSavingsName"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:background="@drawable/textbackground"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:textSize="15dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#CBE4DE" />

        <TextView
            android:id="@+id/textview14"
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Input Saved Money"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtSavedMoney"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:background="@drawable/textbackground"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#CBE4DE" />

        <Button
            android:id="@+id/btnAddSavings"
            android:layout_width="167dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbackground"
            android:text="Add Savings"
            android:textSize="13dp"
            app:backgroundTint="@color/border"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="295dp" />

        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>