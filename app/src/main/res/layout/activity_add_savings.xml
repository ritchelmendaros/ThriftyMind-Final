<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->

            <ImageView
                android:id="@+id/logout"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginStart="-45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="660dp"
                android:foreground="@drawable/logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.986"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="417dp"
        android:layout_height="182dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="223dp"
            android:layout_height="22dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="535dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Savings"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtsavings"
            android:layout_width="255dp"
            android:layout_height="79dp"
            android:layout_marginStart="-435dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="500dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:letterSpacing="-0.01"
            android:lineHeight="51dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#CBE4DE"
            android:textSize="51sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="390dp"
        android:layout_height="551dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:circularflow_defaultRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
        app:layout_constraintVertical_bias="0.471"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textview15"
            android:layout_width="253dp"
            android:layout_height="20dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Savings Information"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview13"
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Input Savings"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtSavingsName"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textbackground"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#CBE4DE"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textview14"
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="Input Saved Money"
            android:textColor="#CBE4DE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtSavedMoney"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textbackground"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#CBE4DE"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnAddSavings"
            android:layout_width="167dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/textbackground"
            android:text="Add Savings"
            android:textSize="13dp"
            app:backgroundTint="@color/border"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="295dp" />

        <LinearLayout
            android:id="@+id/linearLayout25"
            android:layout_width="388dp"
            android:layout_height="102dp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout15"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/Market"
                android:layout_width="76dp"
                android:layout_height="64dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/marketplaceicon" />

            <ImageView
                android:id="@+id/Home"
                android:layout_width="82dp"
                android:layout_height="80dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/homeicon" />

            <ImageView
                android:id="@+id/Savings"
                android:layout_width="76dp"
                android:layout_height="64dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/savingsicon" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>