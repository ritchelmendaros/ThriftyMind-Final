    tools:context=".AddSavings">


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="395dp"
        android:layout_height="95dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="97dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/userprofile"
                android:layout_width="55dp"
                android:layout_height="64dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/user" />

            <EditText
                android:id="@+id/txtUser"
                android:layout_width="117dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="211dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/archivo"
                android:fontStyle="normal"
                android:letterSpacing="-0.01"
                android:text="Hello, John!"
                android:textColor="#CBE4DE"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="89dp"
                android:layout_height="15dp"
                android:layout_marginStart="-329dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="662dp"
                android:fontFamily="@font/archivo"
                android:gravity="top"
                android:letterSpacing="0.01"
                android:lineHeight="8dp"
                android:text="Savings"
                android:textColor="#CBE4DE"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnGoal"
                android:layout_width="119dp"
                android:layout_height="34dp"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="662dp"
                android:background="@drawable/textbackground"
                android:text="Goals"
                android:textSize="12dp"
                app:backgroundTint="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <Button-->
<!--                android:id="@+id/btnExpense"-->
<!--                android:layout_width="119dp"-->
<!--                android:layout_height="34dp"-->
<!--                android:layout_marginStart="-168dp"-->
<!--                android:layout_marginTop="40dp"-->
<!--                android:layout_marginEnd="48dp"-->
